#!/bin/bash

if [ $# -eq 0 ];  then
echo "Usage:"
echo "$0 install"
echo "$0 uninstall"
exit
fi

if [ "$1" = "install" ]; then
  install -Dm644 ./assets/winezgui.svg       /usr/share/icons/hicolor/scalable/apps/
  install -Dm644 ./assets/winezgui.desktop   /usr/share/applications/
  install -Dm755 ./bin/winezgui              /usr/bin/
  install -Dm755 ./bin/winezgui-create-prefix /usr/bin/

elif [ "$1" = "uninstall" ]; then
  rm /usr/share/icons/hicolor/scalable/apps/winezgui.svg
  rm /usr/share/applications/winezgui.desktop
  rm /usr/bin/winezgui
  rm /usr/bin/winezgui-create-prefix

else
  echo "Usage:"
  echo "$0 install"
  echo "$0 uninstall"

fi
