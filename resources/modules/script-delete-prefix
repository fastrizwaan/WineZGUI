#script-delete-prefix
Script_Delete_Prefix()
{
  
  source "${WINEZGUI_SCRIPTS}/script-check-variables-loaded-or-not"
  Script_Check_Variables_Loaded_Or_Not
  SHORTCUT="${DESKTOPDIR}/${EXE_LESS}.desktop"
  # Delete Shortcuts and Prefix Directory
  rm -rf ${SHORTCUT} && \
  DBUG "I: Script: Delete: Removed ${SHORTCUT}" || \
  echo "E: Script: Delete: Cannot Remove ${SHORTCUT} !!"

  rm -rf ${PREFIXDIR} && \
  DBUG "I: Script: Delete: Removed ${PREFIXDIR}"

  # Delete all broken links which points to winezgui game prefix
  find ${DESKTOPDIR} -maxdepth 1 -xtype l -delete && \
  DBUG "I: Script: Delete: Removed broken WineZGUI .desktop links"
 
  # Clean up broken shortcuts and update shortcuts menu
  source "${DATADIR}/winezgui-remove-broken-links" 2>/dev/null || \
  source "${WINEZGUI_SCRIPTS}/winezgui-remove-broken-links"
  WineZGUI_Remove_Broken_Links

  DBUG "I: Script: Delete: Exiting!"
  ${ZENITY_CMD} --info --no-wrap --text "Deleted ${PREFIXNAME}" --title "${APP_WITH_VER} - Delete Prefix!"
  # Exit after deleting prefix
  exit 0
}