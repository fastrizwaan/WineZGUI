# script-cmdline
Script_Exe_Cmdline()
{
  DBUG "I: Script: Launched ${FUNCNAME[0]}"

  # if cmdline.yml is found, get the args
  if [ -f "${PREFIXDIR}/cmdline.yml" ]; then
       ARGS=$(grep args|cut -f2 -d ":")
  fi

  # Ask for Name
  GET_CMDLINE=$(zenity --title "Set Exe Argument..."                 \
                        --text  "Enter commandline exe argument to save:"     \
                        --entry-text "${ARGS}"       \
                        --width=500 --entry                          )

  if [ -z "${GET_CMDLINE}" ]; then #if no value is given
       # Return to Script window
       DBUG "I: Script: ${FUNCNAME[0]}: Name: Cancelled!"
       return 1
  fi

# Avoid checking for symbols, as cmdline could have / ? @ etc.
#   # Check if user entered symbols
#   source ${WINEZGUI_SCRIPTS}/winezgui-check-entry-text
#   WineZGUI_Check_Entry_Text "${GET_CMDLINE}"
  
#   ENTRY_CHECK=$?
#   if [ ${ENTRY_CHECK} -eq 1 ]; then
#        DBUG "I: Script: ${FUNCNAME[0]}: Symbols used in filename, cancelling!"
#        return 1
#   fi  
  if [ -w "${PREFIXDIR}" ]; then
       echo "args:${GET_CMDLINE}"  >> ${PREFIXDIR}/cmdline.yml
       DBUG "I: Script: ${FUNCNAME[0]}: Created args:${GET_CMDLINE} > ${PREFIXNAME}/cmdline.yml"
       if [ -f ${PREFIXDIR}/cmdline.yml ]; then
            zenity --info --title="Command Line argument" --text="${args}"
       fi
  else
       echo "E: Script: ${FUNCNAME[0]}: Cannot write to ${PREFIXDIR}"
  fi

} 
